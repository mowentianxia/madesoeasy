<?xml version="1.0" encoding="UTF-8"?>
<style width="421" height="610" savename="{{cardname}}">
	<styleinfo>
		<name>yugioh-9-en</name>
		<desc>YGO 9th</desc>
		<author>CaiCai</author>
		<version>20160309</version>
		<app-version>2</app-version>
		<icon>icon_en.png</icon>
		<url>yugioh-9.zip</url>
	</styleinfo>

	<data name="image_type" default=""  desc="Image Type" >
		<item name="default" value="" />
		<item name="no frame" value="noframe" />
		<item name="full image" value="full" />
	</data>
	<data name="cardattr" default="none" desc="Attribute" >
		<item name="none" value="none" />
		<item name="dark" value="dark" />
		<item name="divine" value="divine" />
		<item name="earth" value="earth" />
		<item name="fire" value="fire" />
		<item name="light" value="light" />
		<item name="water" value="water" />
		<item name="wind" value="wind" />
		<item name="spell" value="spell" />
		<item name="trap" value="trap" />
	</data>
	<data name="cardtype" default="normal" desc="Card Type" >
		<item name="none" value="none" />
		<item name="normal" value="normal" />
		<item name="effect" value="effect" />
		<item name="fusion" value="fusion" />
		<item name="ritual" value="ritual" />
		<item name="synchro" value="synchro" />
		<item name="token" value="token" />
		<item name="xyz" value="xyz" />
		<item name="spell" value="spell" />
		<item name="trap" value="trap" />
	</data>
	<data name="cardname" desc="Card Name" type="text" default="Click here to enter card name" />
	<data name="cardcode" desc="Card Code" type="text"  default="00000000" />
	<data name="cardtext" desc="Text" type="text"  default="Click here to enter card text" />
	<data name="cardptext" desc="Pendulum Text" type="text" default="click this input pendulum text" />
	<data name="cardpleft" desc="Pendulum Left"  type="text" default="0"  />
	<data name="cardpright" desc="Pendulum Right" type="text"  default="0"  />
	<data name="edition" desc="Edition"  type="text" default="" />
	<data name="cardnum" desc="Number"  type="text" default="DT01-CN001" />
	<data name="cardatk"  desc="Atk" type="text" default="0"  />
	<data name="carddef"  desc="Def" type="text" default="0"  />
	<data name="cardlevel" desc="Level/Rank" type="text" default="0" />
	<data name="cardcode_image" desc="Image" type="image"  default="{{cardcode}}.png" />
	
	<data name="pimagetype" default=""  desc="pendulum image type">
		<item name="default" value="" />
		<item name="rect" value="rect" />
	</data>

	<data name="cardcopy" default=""  desc="copyright image">
		<item name="default" value="" />
		<item name="english" value="enCopyriht" />
		<item name="japan" value="jpCopyriht" />
	</data>
	<data name="cardborder" default=""  desc="border color">
		<item name="default" value="" />
		<item name="gold" value="gold" />
	</data>
	<data name="namecolor" default=""  desc="card name color">
		<item name="default" value="" />
		<item name="silvery" value="#E6E6E6" />
		<item name="gold" value="#D8C735" />
		<item name="red" value="#3C0000" />
		<item name="white" value="#ffffff" />
		<item name="black" value="#000000" />
	</data>
		
	<data name="cardrare" default="none" desc="rare type">
		<item name="default" value="none" />
		<item name="super foil" value="superfoil" />
		<item name="secret foil" value="secretfoil" />
		<item name="parallel foil" value="parallelfoil" />
		<item name="mosaic foil" value="mosaicfoil" />
		<item name="star foil" value="starfoil" />
		<item name="ultimate foil" value="ultimatefoil" />
	</data>
	<data name="rare_type" default=""  desc="rare size">
		<item name="default" value="" />
		<item name="middle" value="middle" />
		<item name="full" value="full" />
	</data>
	<data name="corner" default="none"  desc="corner" >
		<item name="default" value="none" />
		<item name="cornerdefault" value="cornerdefault" />
		<item name="cornerfirst" value="cornerfirst" />
		<item name="cornerunlimited" value="cornerunlimited" />
	</data>
	
	<data name="pendulum" default="none"  desc="pendulum type">
		<item name="none" value="none" />
		<item name="big" value="big" />
		<item name="normal" value="normal" />
		<item name="small" value="small" />
	</data>
	<data name="stmark" default=""  desc="spell/trap" >
		<item name="none" value="" />
		<item name="normal spell" value="normalspell" />
		<item name="normal trap" value="normaltrap" />
		<item name="quick spell" value="quickspell" />
		<item name="ritual spell" value="ritualspell" />
		<item name="continuouss spell" value="continuousspell" />
		<item name="equip spell" value="equipspell" />
		<item name="field spell" value="fieldspell" />
		<item name="counter trap" value="countertrap" />
		<item name="continuouess trap" value="continuoustrap" />
	</data>
	
	<data name="race" desc="Race" default="" hide="true">
		<item value=""/>
		<item value="Warrior"/>
		<item value="Spellcaster"/>
		<item value="Fairy"/>
		<item value="Fiend"/>
		<item value="Zombie"/>
		<item value="Machine"/>
		<item value="Aqua"/>
		<item value="Pyro"/>
		<item value="Rock"/>
		<item value="Winged Beast"/>
		<item value="Plant"/>
		<item value="Insect"/>
		<item value="Thunder"/>
		<item value="Dragon"/>
		<item value="Beast"/>
		<item value="Beast-Warrior"/>
		<item value="Dinosaur"/>
		<item value="Fish"/>
		<item value="Sea Serpent"/>
		<item value="Reptile"/>
		<item value="Psychic"/>
		<item value="Divine-Beast"/>
		<item value="Created-Divine"/>
		<item value="Wyrm"/>
	</data>
	<data name="effect" desc="effect" default="" hide="true">
		<item value=""/>
		<item value="Synchro"/>
		<item value="Xyz"/>
		<item value="Fusion"/>
		<item value="Ritual"/>
		<item value="Effect"/>
		<item value="Tuner"/>
		<item value="Spirit"/>
		<item value="Toon"/>
		<item value="Gemini"/>
		<item value="Union"/>
		<item value="Pendulum"/>
		<item value="Filp"/>
		<item value="Dark Synchro"/>
		<item value="Dark Tuner"/>
		<item value="Special Summon"/>
		<item value="Token"/>
	</data>
	<data name="cardmonster" desc="Race/Effedt" type="multi_select" >
		<item name="race" 		value="race"   />
		<item name="effect1"	value="effect" />
		<item name="effect2" 	value="effect" />
		<item name="effect3" 	value="effect" />
	</data>
	<data name="cardfoil" desc="Foil" type="multi_select" >
		<item name="cardrare" 	value="cardrare"	/>
		<item name="rare_type" 	value="rare_type"	/>
		<item name="cardborder" value="cardborder"	/>
		<item name="corner" 	value="corner"		/>
		<item name="cardcopy" 	value="cardcopy" />
	</data>
	<data name="cardbg" desc="Style settings" type="multi_select" >
		<item name="cardtype" 	value="cardtype"	/>
		<item name="image_type" value="image_type"	/>
		<item name="pendulum" 	value="pendulum"	/>
		<item name="pimagetype" value="pimagetype"	/>
		<item name="namecolor" 	value="namecolor"	 />
	</data>
		
	<bool name="cardborder_is_gold" value="'{{cardborder}}' == 'gold'"/>
	<bool name="is_pendulum" 		value="'{{pendulum}}' == 'big' or '{{pendulum}}' == 'normal' or '{{pendulum}}' == 'small'"/>
	<bool name="image_is_normal" 	value="'{{image_type}}' != 'noframe' and 'image_type}}' != 'full'"/>
	<bool name="image_is_noframe" 	value="'{{image_type}}' == 'noframe'"/>
	<bool name="image_is_full" 		value="'{{image_type}}' == 'full'"/>
	<bool name="pimage_is_normal" 	value="'{{pimagetype}}' != 'rect'"/>
	<bool name="pimage_is_rect" 	value="'{{pimagetype}}' == 'rect'"/>
	<bool name="pendulum_is_normal" value="'{{pendulum}}' == 'normal'"/>
	<bool name="pendulum_is_big" 	value="'{{pendulum}}' == 'big'"/>
	<bool name="pendulum_is_small" 	value="'{{pendulum}}' == 'small'"/>
	<bool name="pendulum_nots_big" 	value="{{pendulum_is_small}} or {{pendulum_is_normal}}"/>
	<bool name="pendulum_nots_small"value="{{pendulum_is_normal}} or {{pendulum_is_big}}"/>
	<bool name="is_spelltrap" 		value="'{{cardtype}}' == 'spell' or '{{cardtype}}' == 'trap'" />
	<bool name="rare_type_is_normal"value="'{{rare_type}}' == ''"/>
	<bool name="rare_type_is_middle"value="'{{rare_type}}' == 'middle'"/>
	<bool name="rare_type_is_full" 	value="'{{rare_type}}' == 'full'"/>
	<bool name="card_is_syz" 		value="'{{cardtype}}' == 'xyz'"/>
	<bool name="card_name_is_white" value="{{is_spelltrap}} or {{card_is_syz}}"/>
	<bool name="card_is_black" 		value="{{card_is_syz}}"/>
	<bool name="has_name_color" 	value="'{{namecolor}}' != ''"/>

	<layout>
		<size left="0" top="0" width="421" height="610"/>
		<image index="-1" click="cardbg">
			<size left="0" top="0" width="421" height="610"/>
			<src>bg/card-{{cardtype}}.png</src>
		</image>
		<!-- 黄金边框 -->
		<image index="2">
			<size left="0" top="0" width="421" height="610"/>
			<src>foil/border.png</src>
			<visible>{{cardborder_is_gold}}</visible>
		</image>
		<!-- 摇摆背景 -->
		<image index="-1">
			<size left="13.5" top="272" width="394" height="325"/>
			<src>pendulum/pendulum.png</src>
			<visible>{{is_pendulum}}</visible>
		</image>
		<!-- 摇摆背景 -->
		<image index="-1">
			<size left="20" top="89" width="381" height="17"/>
			<src>pendulum/line-{{cardtype}}.png</src>
			<visible>{{is_pendulum}}</visible>
		</image>
		<!-- P怪中间背景图白色 -->
		<image index="-1" background="#ffffff">
			<size left="30" top="106" width="363" height="360"/>
			<visible>{{is_pendulum}} and {{pimage_is_rect}}</visible>
		</image>
		<!-- 中间图-->
		<image index="-1" click="cardcode_image" background="#000000">
			<size when="{{pimage_is_normal}} and {{pendulum_nots_big}}" 
				left="29.5" top="105.5" width="363" height="345"/>
			<size when="{{pimage_is_normal}} and {{pendulum_is_big}}" 
				left="29.5" top="105.5" width="363" height="360"/>
			<size when="{{pimage_is_rect}} and {{pendulum_nots_small}}" 
				left="29.5" top="105.5" width="363" height="275"/>
			<size when="{{pimage_is_rect}} and {{pendulum_is_small}}" 
				left="29.5" top="105.5" width="363" height="298"/>
			<size when="{{image_is_noframe}}" 
				left="41" top="103" width="339" height="334"/>
			<size when="{{image_is_full}}" 
				left="14" top="14" width="393" height="582"/>
			<size left="51.5" top="112" width="319.5" height="319"/>
			<src>{{cardcode_image}}</src>
		</image>
		<!-- 中间图镀膜 -->
		<image index="3">
			<size when="{{rare_type_is_full}}"
				left="0" top ="0" width="421" height="610" />
			<size when="{{image_is_full}}" 
				left="14" top="14" width="393" height="582"/>
			<size when="{{pendulum_nots_small}}" 
				left="29.5" top="105.5" width="363" height="275" />
			<size when="{{pendulum_is_small}}" 
				left="29.5" top="105.5" width="363" height="294" />
			<size when="{{image_is_noframe}}" 
				left="41" top="103" width="339" height="334" />
			<size left="51.5" top="112" width="319.5" height="318" />
			<src>foil/{{cardrare}}.png</src>
			<visible>{{rare_type_is_normal}} == false</visible>
		</image>
		<!-- 卡名背景（透明） -->
		<image index="1">
			<size left="18" top ="25" width="382" height="50"/>
			<src>name.png</src>
			<visible>{{image_is_full}}</visible>
		</image>
		<!-- 效果背景（透明） -->
		<image index="1">
			<size left="23" top ="451" width="373" height="128"/>
			<src>desc.png</src>
			<visible>{{image_is_full}}</visible>
		</image>
		<!-- 分割线（透明） -->
		<image index="1">
			<size left="35" top ="553" width="350" height="1" />
			<src>bar.png</src>
			<visible>{{is_spelltrap}} == false and {{image_is_full}}</visible>
		</image>
		<!-- ATK（透明） -->
		<text index="1">
			<size left="226" top="554" width="56" height="21"/>
			<align>vcenter</align>
			<color>#000000</color>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="18.5"/>
			<text>ATK/</text>
			<visible>{{is_spelltrap}} == false and {{image_is_full}}</visible>
		</text>
		<!-- DEF（透明） -->
		<text index="1">
			<size left="313" top="554" width="56" height="21"/>
			<align>vcenter</align>
			<color>#000000</color>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="18.5"/>
			<text>DEF/</text>
			<visible>{{is_spelltrap}} == false and {{image_is_full}}</visible>
		</text>
		<!-- 中间图金边 -->
		<image index="1">
			<size left="45" top="106" width="333" height="331" />
			<src>foil/image.png</src>
			<visible>{{is_pendulum}} == false and {{cardborder_is_gold}} and {{image_is_normal}}</visible>
		</image>
		<!-- P怪边框 镀膜 -->
		<image index="1">
			<size left="20" top="99" width="382" height="485"/>
			<src>pendulum/pendulum_{{pendulum}}.png</src>
			<visible>{{is_pendulum}}</visible>
		</image>
		<!-- P怪边框（金边） 镀膜 -->
		<image index="1">
			<size left="26" top="103.5" width="373" height="476"/>
			<src>foil/pend_{{pendulum}}.png</src>
			<visible>{{is_pendulum}} and {{cardborder_is_gold}}</visible>
		</image>
		<!-- 卡名 -->
		<text index="2" singleline="true" click="cardname">
			<size left="31.5" top="31" width="318" height="36"/>
			<align>vcenter</align>
			<color when="{{has_name_color}}">{{namecolor}}</color>
			<color when="{{card_name_is_white}}">#ffffff</color>
			<color>#000000</color>
			<font name="font/MatrixRegularSmallCaps.ttf" style="normal" size="40"/>
			<text>{{cardname}}</text>
		</text>
		<!-- 属性 -->
		<image index="2" click="cardattr">
			<size left="350" top="29" width="38" height="38"/>
			<src when="'{{cardtype}}' == 'spell'">attribute/spell_en.png</src>
			<src when="'{{cardtype}}' == 'trap'">attribute/trap_en.png</src>
			<src>attribute/{{cardattr}}_en.png</src>
		</image>
		<!-- 等级 -->
		<image index="2" scaleType="FIT_CENTER" click="cardlevel">
			<size left="0" top="75" width="421" height="25"/>
			<src when="{{card_is_syz}}">rank/rank-{{cardlevel}}.png</src>
			<src>level/level-{{cardlevel}}.png</src>
			<visible>{{is_spelltrap}} == false</visible>
		</image>
		<!-- 魔法标志 -->
		<image index="2" scaleType="FIT_CENTER" click="stmark">
			<size left="227" top="75" width="150" height="26"/>
			<src>enmark/{{stmark}}.png</src>
			<visible>{{is_spelltrap}}</visible>
		</image>
		<!-- 种族/效果/效果/效果 -->
		<layout index="2" type="horizontal" click="cardmonster">
			<size when="{{pendulum_is_big}}"
				left="32" top="473" width="314" height="24"/>
			<size left="32" top="458" width="314" height="24"/>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="14"/>
				<text>[</text>
			</text>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="15"/>
				<text>{{race}}</text>
			</text>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="15"/>
				<text>/{{effect1}}</text>
				<visible>'{{effect1}}' != ''</visible>
			</text>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="15"/>
				<text>/{{effect2}}</text>
				<visible>'{{effect2}}' != ''</visible>
			</text>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="15"/>
				<text>/{{effect3}}</text>
				<visible>'{{effect3}}' != ''</visible>
			</text>
			<text>
				<align>vcenter</align>
				<color>#000000</color>
				<font name="font/ITCStoneSerifSmallCapsBold.ttf" style="normal" size="14"/>
				<text>]</text>
			</text>
			<visible>{{is_spelltrap}} == false</visible>
		</layout>
		<!-- ATK -->
		<text index="2" click="cardatk">
			<size left="262" top="555" width="40" height="19"/>
			<align>right|vcenter</align>
			<color>#000000</color>
			<font when="{{cardatk}} == 0 and '{{cardatk}}' != '0'" 
				name="font/ITCStoneSerif.ttf" style="bold" size="15"/>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="18.5"/>
			<text>{{cardatk}}</text>
			<visible>{{is_spelltrap}} == false</visible>
		</text>
		<!-- DEF -->
		<text index="2" click="carddef">
			<size left="347" top="555" width="40" height="19"/>
			<align>right|vcenter</align>
			<color>#000000</color>
			<font when="{{carddef}} == 0 and '{{carddef}}' != '0'" 
				name="font/ITCStoneSerif.ttf" style="bold" size="15"/>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="18.5"/>
			<text>{{carddef}}</text>
			<visible>{{is_spelltrap}} == false</visible>
		</text>
		<!-- P怪 左刻度 -->
		<text index="2" click="cardpleft">
			<size when="{{pendulum_is_big}}" 
				left="31" top="422" width="30" height="36"/>
			<size when="{{pendulum_is_small}}" 
				left="31" top="420" width="30" height="36"/>
			<size 
				left="31" top="413" width="30" height="36"/>
			<align>center</align>
			<color>#000000</color>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="27"/>
			<text>{{cardpleft}}</text>
			<visible>{{is_pendulum}}</visible>
		</text>
		<!-- P怪 右刻度 -->
		<text index="2" click="cardpright">
			<size when="{{pendulum_is_big}}" 
				left="362" top="422" width="30" height="36"/>
			<size when="{{pendulum_is_small}}" 
				left="362" top="420" width="30" height="36"/>
			<size left="362" top="413" width="30" height="36"/>
			<align>center</align>
			<color>#000000</color>
			<font name="font/MatrixBoldSmallCaps.ttf" style="normal" size="27"/>
			<text>{{cardpright}}</text>
			<visible>{{is_pendulum}}</visible>
		</text>
		<!-- 卡片密码 -->
		<text index="2" singleline="true" click="cardcode">
			<size left="19" top="580" width="60" height="17"/>
			<align>vcenter</align>
			<color when="{{card_is_black}}">#ffffff</color>
			<color>#000000</color>
			<font name="font/ITCStoneSerif.ttf" style="normal" size="11"/>
			<text>{{cardcode}}</text>
		</text>
		<!-- 版权图片 -->
		<image index="2" scaleType="FIT_CENTER" click="cardfoil">
			<size left="224" top="583" width="160" height="10"/>
			<src when="{{card_is_black}}">copyright/{{cardcopy}}1.png</src>
			<src>copyright/{{cardcopy}}0.png</src>
		</image>
		<!-- P怪效果 -->
		<text index="2" line-space-scale="1.0"  singleline="false" click="cardptext" keepWord="true" >
			<size when="{{pendulum_is_small}}"
				left="67" top="405" width="288" height="46"/>
			<size when="{{pendulum_is_big}}"
				left="67" top="388" width="288" height="78"/>
			<size left="67" top="388" width="288" height="63"/>
			<align>left</align>
			<color>#000000</color>
			<font name="font/MatrixBook.ttf" style="normal" size="13"/>
			<text>{{cardptext}}</text>
			<visible>{{is_pendulum}}</visible>
		</text>
		<!-- 效果-->
		<text index="2" line-space-scale="1.0" singleline="false" click="cardtext"  keepWord="true">
			<size when="{{pendulum_is_big}}"
				left="34.5" top="493" width="353" height="58"/>
			<size when="{{is_spelltrap}}"
				left="34.5" top="461" width="353" height="110"/>
			<size left="34.5" top="479" width="353" height="75"/>
			<align>left</align>
			<color>#000000</color>
			<font when="{{is_spelltrap}}" 
				  name="font/MatrixBook.ttf" style="normal" size="14"/>
			<font when="'{{cardtype}}'=='normal'" name="font/MatrixBook.ttf" style="italic" size="13"/>
			<font name="font/MatrixBook.ttf" style="normal" size="13"/>
			<text>{{cardtext}}</text>
		</text>
		<!-- 卡包编号 -->
		<text index="2" singleline="true" click="cardnum">
			<size when="{{is_pendulum}}"
				left="37" top="555" width="140" height="18"/>
			<size left="237" top="436.5" width="140" height="18"/>
			<align  when="{{is_pendulum}}">vcenter</align>
			<align>right|vcenter</align>
